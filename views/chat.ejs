<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Chat</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Chat Header -->
  <div class="bg-green-600 text-white p-4 shadow-md sticky top-0 z-10">
    <div class="max-w-2xl mx-auto flex items-center">
      <a href="/home" class="mr-4 hover:bg-green-700 p-2 rounded-full transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </a>
      <div class="flex items-center">
        <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center mr-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div>
          <h2 class="font-semibold text-lg">Idea Discussion</h2>
          <p class="text-green-100 text-sm opacity-90">Active now</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Chat Container -->
  <div class="max-w-2xl mx-auto bg-stone-100 min-h-screen flex flex-col">
    
    <!-- Messages Area -->
    <div class="flex-1 p-4 pb-6 overflow-y-auto space-y-3" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22><g fill=%22none%22 fill-rule=%22evenodd%22><g fill=%22%23f0f0f0%22 fill-opacity=%220.05%22><circle cx=%2230%22 cy=%2230%22 r=%221%22/></g></g></svg>');">
      
      <% chat.messages.forEach(msg => { %>
        <% const isCurrentUser = msg.sender._id.toString() === currentUser._id.toString(); %>
        
        <div class="flex <%= isCurrentUser ? 'justify-end' : 'justify-start' %>">
          <div class="max-w-xs lg:max-w-md">
            <!-- Message Bubble -->
            <div class="<%= isCurrentUser ? 'bg-green-500 text-white' : 'bg-white text-gray-800' %> rounded-2xl px-4 py-2 shadow-sm relative">
              
              <!-- Bubble Tail -->
              <div class="absolute top-0 <%= isCurrentUser ? '-right-2 border-l-green-500' : '-left-2 border-r-white' %> w-0 h-0 border-t-8 border-b-8 border-t-transparent border-b-transparent <%= isCurrentUser ? 'border-l-8' : 'border-r-8' %>"></div>
              
              <!-- Sender Name (only for others) -->
              <% if (!isCurrentUser) { %>
                <div class="text-green-600 text-xs font-semibold mb-1">
                  <%= msg.sender.name || "Other User" %>
                </div>
              <% } %>
              
              <!-- Message Content -->
              <div class="text-sm leading-relaxed break-words">
                <%= msg.content %>
              </div>
              
              <!-- Timestamp -->
              <div class="flex items-center justify-end mt-1 space-x-1">
                <span class="text-xs <%= isCurrentUser ? 'text-green-100' : 'text-gray-500' %> opacity-75">
                  <%= new Date(msg.timestamp).toLocaleTimeString('en-US', { 
                    hour: 'numeric', 
                    minute: '2-digit', 
                    hour12: true 
                  }) %>
                </span>
                <!-- Double check marks for sent messages -->
                <% if (isCurrentUser) { %>
                  <svg class="w-4 h-4 text-green-100 opacity-75" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                    <path d="M12.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-1-1a1 1 0 011.414-1.414L8 15.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                <% } %>
              </div>
            </div>
            
            <!-- Date separator (show if message is from different day) -->
            <% 
              const currentMsgDate = new Date(msg.timestamp).toDateString();
              const isNewDay = chat.messages.indexOf(msg) === 0 || 
                               new Date(chat.messages[chat.messages.indexOf(msg) - 1].timestamp).toDateString() !== currentMsgDate;
            %>
            <% if (isNewDay) { %>
              <div class="flex justify-center my-4">
                <div class="bg-white bg-opacity-80 text-gray-600 text-xs px-3 py-1 rounded-full shadow-sm">
                  <%= new Date(msg.timestamp).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  }) %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Message Input Area -->
    <div class="bg-gray-50 p-4 border-t border-gray-200">
      <form action="/chat/<%= chat._id %>/message" method="POST" class="flex items-center space-x-3">
        
        <!-- Emoji Button -->
        <button type="button" class="text-gray-500 hover:text-gray-700 p-2 rounded-full hover:bg-gray-200 transition-colors duration-200">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd"/>
          </svg>
        </button>
        
        <!-- Message Input -->
        <div class="flex-1 relative">
          <input
            name="content"
            type="text"
            placeholder="Type a message..."
            class="w-full bg-white border border-gray-300 rounded-full px-4 py-3 pr-12 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent text-sm"
            required
          />
          <!-- Attachment Button -->
          <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
            </svg>
          </button>
        </div>
        
        <!-- Send Button -->
        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white p-3 rounded-full transition-colors duration-200 shadow-md hover:shadow-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
<nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-10">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-5 text-gray-600 text-xs">
      <a href="/home" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0H5m4 0h10m-4-6v6m0 0h4" />
        </svg>
        <span>Home</span>
      </a>
      
      <a href="/search" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <span>Search</span>
      </a>
      
      <a href="/chats" class="flex flex-col items-center py-3 text-green-600 relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="font-medium">Chats</span>
        <div class="absolute top-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-green-600 rounded-full"></div>
      </a>
      
      <a href="/post" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Post</span>
      </a>
      
      <a href="/profile" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A7 7 0 0112 15a7 7 0 016.879 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>Profile</span>
      </a>
    </div>
  </div>
</nav>
</body>
</html>