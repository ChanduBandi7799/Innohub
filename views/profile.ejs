<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 pb-24">

  <!-- Edit Profile Section -->
  <div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-4">Edit Profile</h2>

    <form action="/profile/edit" method="POST" class="space-y-4">
      <div>
        <label class="block font-semibold mb-1">Name</label>
        <input type="text" name="name" value="<%= user?.name || '' %>" required
               class="w-full border border-gray-300 rounded px-4 py-2" />
      </div>

      <div>
        <label class="block font-semibold mb-1">Bio</label>
        <textarea name="bio" rows="4"
                  class="w-full border border-gray-300 rounded px-4 py-2"><%= user?.bio || '' %></textarea>
      </div>

      <div class="flex justify-end">
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Save</button>
      </div>
    </form>
  </div>

  <!-- User Ideas Section -->
  <div class="max-w-xl mx-auto mt-8 p-6 bg-white rounded-xl shadow-md">
    <h2 class="text-xl font-semibold mb-4">Your Posted Ideas</h2>

    <% if (ideas.length === 0) { %>
      <p class="text-gray-500">No ideas posted yet.</p>
    <% } else { %>
      <% ideas.forEach(idea => { %>
        <div class="bg-gray-50 p-4 rounded border mb-4">
          <h3 class="text-lg font-bold text-blue-700 mb-1"><%= idea.sector %></h3>
          <p class="text-gray-800 mb-2"><%= idea.description %></p>
          <p class="text-sm text-gray-500 mb-2">Posted on <%= idea.datePosted.toDateString() %></p>

          <div class="flex space-x-2">
            <a href="/idea/edit/<%= idea._id %>" class="bg-yellow-500 text-white px-4 py-1 rounded hover:bg-yellow-600">
              Edit
            </a>
            <form action="/idea/delete/<%= idea._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this idea?')">
              <button type="submit" class="bg-red-500 text-white px-4 py-1 rounded hover:bg-red-600">
                Delete
              </button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
<div class="max-w-xl mx-auto mt-12 p-6 bg-white rounded-xl shadow-md">
  <h2 class="text-xl font-semibold mb-4">Your Posted Problems</h2>

  <% if (problems.length === 0) { %>
    <p class="text-gray-500">No problems posted yet.</p>
  <% } else { %>
    <% problems.forEach(problem => { %>
      <div class="bg-gray-50 p-4 rounded border mb-4">
        <h3 class="text-lg font-bold text-purple-700 mb-1"><%= problem.sector %></h3>
        <p class="text-gray-900 font-semibold mb-1"><%= problem.title %></p>
        <p class="text-gray-800 mb-2"><%= problem.description %></p>
        <p class="text-sm text-gray-500 mb-2">Posted on <%= problem.datePosted.toDateString() %></p>

        <div class="flex space-x-2">
          <a href="/problem/edit/<%= problem._id %>" class="bg-yellow-500 text-white px-4 py-1 rounded hover:bg-yellow-600">
            Edit
          </a>
          <form action="/problem/delete/<%= problem._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this problem?')">
            <button type="submit" class="bg-red-500 text-white px-4 py-1 rounded hover:bg-red-600">
              Delete
            </button>
          </form>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>


  <!-- Bottom Navigation -->
  <nav class="fixed bottom-0 w-full bg-white border-t shadow-inner">
    <div class="flex justify-around text-gray-600 text-sm">
      <a href="/home" class="flex flex-col items-center py-2 hover:text-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0H5m4 0h10m-4-6v6m0 0h4" />
        </svg>
        Home
      </a>
      <a href="/search" class="flex flex-col items-center py-2 hover:text-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Search
      </a>
      <a href="/post" class="flex flex-col items-center py-2 hover:text-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path d="M12 4v16m8-8H4" />
        </svg>
        Post
      </a>
      <a href="/profile" class="flex flex-col items-center py-2 hover:text-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path d="M5.121 17.804A7 7 0 0112 15a7 7 0 016.879 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Profile
      </a>
    </div>
  </nav>

</body>
</html>
