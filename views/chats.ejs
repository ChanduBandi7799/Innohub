<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>InnoHub | My Chats</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen">

<!-- WhatsApp-style Header -->
<header class="bg-green-600 text-white p-4 shadow-md sticky top-0 z-10">
  <div class="flex items-center justify-between max-w-4xl mx-auto">
    <div class="flex items-center space-x-3">
      <h1 class="text-xl font-semibold">Chats</h1>
      <div class="bg-green-700 text-xs px-2 py-1 rounded-full">
        <%= chats ? chats.length : 0 %>
      </div>
    </div>
    <div class="flex items-center space-x-4">
      <!-- Search Icon -->
      <button class="hover:bg-green-700 p-2 rounded-full transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>
      <!-- Menu Icon -->
      <button class="hover:bg-green-700 p-2 rounded-full transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
        </svg>
      </button>
    </div>
  </div>
</header>

<!-- Main Content -->
<main class="max-w-4xl mx-auto bg-white min-h-[calc(100vh-140px)] pb-20">
  <% if (chats && chats.length > 0) { %>
    <!-- Chat List -->
    <div class="divide-y divide-gray-100">
      <% chats.forEach((chat, index) => { %>
        <% const lastMessage = chat.messages && chat.messages.length > 0 ? chat.messages[chat.messages.length - 1] : null; %>
        <% const isCurrentUser = lastMessage && lastMessage.sender && user && lastMessage.sender._id.toString() === user._id.toString(); %>
        
        <div class="p-4 hover:bg-gray-50 transition-colors duration-200 cursor-pointer active:bg-gray-100">
          <% if (chat.idea && chat.idea._id) { %>
            <a href="/chat/<%= chat.idea._id %>" class="block">
          <% } %>
          
          <div class="flex items-start space-x-3">
            <!-- Avatar/Icon -->
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center text-white font-semibold text-lg shadow-md">
                <%= chat.idea && chat.idea.sector ? chat.idea.sector.charAt(0).toUpperCase() : '?' %>
              </div>
            </div>
            
            <!-- Chat Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between mb-1">
                <!-- Chat Title -->
                <h3 class="font-medium text-gray-900 truncate text-base">
                  <% if (chat.idea && chat.idea.sector && chat.idea.problem) { %>
                    <%= chat.idea.sector %> - <%= chat.idea.problem %>
                  <% } else if (chat.idea && chat.idea.sector) { %>
                    <%= chat.idea.sector %> Discussion
                  <% } else { %>
                    Idea Discussion
                  <% } %>
                </h3>
                
                <!-- Timestamp -->
                <div class="flex-shrink-0 ml-2">
                  <% if (lastMessage && lastMessage.timestamp) { %>
                    <% 
                      const messageDate = new Date(lastMessage.timestamp);
                      const now = new Date();
                      const isToday = messageDate.toDateString() === now.toDateString();
                      const isYesterday = new Date(now.getTime() - 24*60*60*1000).toDateString() === messageDate.toDateString();
                    %>
                    <span class="text-xs text-gray-500">
                      <% if (isToday) { %>
                        <%= messageDate.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true }) %>
                      <% } else if (isYesterday) { %>
                        Yesterday
                      <% } else { %>
                        <%= messageDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                      <% } %>
                    </span>
                  <% } %>
                </div>
              </div>
              
              <!-- Last Message Preview -->
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <% if (lastMessage) { %>
                    <div class="flex items-center space-x-1">
                      <!-- Double check for sent messages -->
                      <% if (isCurrentUser) { %>
                        <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                          <path d="M12.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-1-1a1 1 0 011.414-1.414L8 15.586l7.293-7.293a1 1 0 011.414 0z"/>
                        </svg>
                      <% } %>
                      
                      <p class="text-sm text-gray-600 truncate">
                        <% if (lastMessage.content) { %>
                          <% if (!isCurrentUser && lastMessage.sender && lastMessage.sender.name) { %>
                            <span class="font-medium"><%= lastMessage.sender.name.split(' ')[0] %>:</span>
                          <% } %>
                          <%= lastMessage.content.length > 50 ? lastMessage.content.substring(0, 50) + '...' : lastMessage.content %>
                        <% } else { %>
                          <span class="italic">No content</span>
                        <% } %>
                      </p>
                    </div>
                  <% } else { %>
                    <p class="text-sm text-blue-600 italic">
                      Tap to start chatting
                    </p>
                  <% } %>
                </div>
                
                <!-- Unread indicator / Status -->
                <div class="flex-shrink-0 ml-2 flex items-center space-x-2">
                  <!-- Online status indicator -->
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
          
          <% if (chat.idea && chat.idea._id) { %>
            </a>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <!-- Empty State -->
    <div class="flex flex-col items-center justify-center py-16 px-4 text-center">
      <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
      </div>
      <h3 class="text-xl font-medium text-gray-900 mb-2">No chats yet</h3>
      <p class="text-gray-600 mb-6 max-w-sm">
        Start meaningful conversations with idea contributors and build something amazing together!
      </p>
      <a href="/home" class="inline-flex items-center px-6 py-3 bg-green-600 text-white rounded-full hover:bg-green-700 transition-colors duration-200 shadow-md hover:shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Explore Ideas
      </a>
    </div>
  <% } %>
</main>

<!-- WhatsApp-style Bottom Navigation -->
<nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-10">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-5 text-gray-600 text-xs">
      <a href="/home" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0H5m4 0h10m-4-6v6m0 0h4" />
        </svg>
        <span>Home</span>
      </a>
      
      <a href="/search" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <span>Search</span>
      </a>
      
      <a href="/chats" class="flex flex-col items-center py-3 text-green-600 relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="font-medium">Chats</span>
        <div class="absolute top-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-green-600 rounded-full"></div>
      </a>
      
      <a href="/post" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Post</span>
      </a>
      
      <a href="/profile" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A7 7 0 0112 15a7 7 0 016.879 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>Profile</span>
      </a>
    </div>
  </div>
</nav>

</body>
</html>