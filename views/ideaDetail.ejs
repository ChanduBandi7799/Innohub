<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Idea Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen">

  <div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md">
    <!-- Sector title -->
    <h1 class="text-2xl font-bold text-blue-700 mb-2"><%= idea.sector %></h1>

    <!-- Idea description -->
    <p class="text-gray-800 mb-4"><%= idea.description %></p>

    <!-- Contributor info -->
   <p class="text-sm text-gray-500 mb-4">
  Posted by: <%= idea.contributorId.name %> on <%= new Date(idea.datePosted).toDateString() %>
</p>

    <!-- Conditional Chat Button -->
    <% if (currentUser && currentUser._id.toString() !== idea.contributorId._id.toString()) { %>

      <a href="/chat/<%= idea._id %>" 
         class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
        Chat with Publisher
      </a>
    <% } %>
  </div>

</body>
</html>
