<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Search - InnoHub</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
      function switchView(type) {
        document.getElementById('searchType').value = type;

        const ideasTab = document.getElementById('ideas-tab');
        const problemsTab = document.getElementById('problems-tab');

        if (type === 'idea') {
          ideasTab.classList.add('bg-blue-600', 'text-white');
          ideasTab.classList.remove('bg-gray-300', 'text-gray-800');

          problemsTab.classList.remove('bg-blue-600', 'text-white');
          problemsTab.classList.add('bg-gray-300', 'text-gray-800');
        } else {
          problemsTab.classList.add('bg-blue-600', 'text-white');
          problemsTab.classList.remove('bg-gray-300', 'text-gray-800');

          ideasTab.classList.remove('bg-blue-600', 'text-white');
          ideasTab.classList.add('bg-gray-300', 'text-gray-800');
        }
      }

      // Auto-select tab based on server value
      window.onload = function () {
        switchView("<%= type || 'idea' %>");
      };
    </script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto p-6 pb-20">
      <h1 class="text-3xl font-bold mb-6 text-center">Search <%= type === 'problem' ? 'Problems' : 'Ideas' %></h1>

      <!-- Search Filters -->
      <form action="/search" method="GET" class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
        <div>
          <label class="block mb-1 font-medium text-gray-700">Sector</label>
          <select name="sector" class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500">
            <option value="">All</option>
            <option value="Technology">Technology</option>
            <option value="Healthcare">Healthcare</option>
            <option value="Education">Education</option>
            <option value="Finance">Finance</option>
          </select>
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700">Keyword</label>
          <input
            type="text"
            name="keyword"
            placeholder="Enter keywords"
            class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-indigo-500"
          />
        </div>

        <!-- Hidden type input -->
        <input type="hidden" name="type" id="searchType" value="<%= type || 'idea' %>" />

        <div class="flex items-end">
          <button
            type="submit"
            class="bg-indigo-600 text-white px-6 py-2 rounded-lg w-full hover:bg-indigo-700"
          >
            Search
          </button>
        </div>
      </form>

      <!-- View Switch Tabs -->
      <div class="flex justify-center mb-6 space-x-4">
        <button id="ideas-tab" onclick="switchView('idea')" type="button" class="px-4 py-2 rounded bg-blue-600 text-white">
          Ideas
        </button>
        <button id="problems-tab" onclick="switchView('problem')" type="button" class="px-4 py-2 rounded bg-gray-300 text-gray-800">
          Problems
        </button>
      </div>

      <!-- Search Results -->
      <div id="search-results">
        <% if (results && results.length > 0) { %>
          <div class="space-y-4">
            <% results.forEach(item => { %>
              <div class="bg-white p-4 rounded-lg shadow-md border">
                <h2 class="text-xl font-semibold"><%= item.title %></h2>
                <p class="text-sm text-gray-500"><strong>Sector:</strong> <%= item.sector %></p>
                <p class="mt-2 text-gray-700"><%= item.description %></p>
                <p class="text-sm text-gray-400 mt-1"><%= item.datePosted.toDateString() %></p>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-center text-gray-500 mt-6">No <%= type %>s found. Try adjusting your filters.</p>
        <% } %>
      </div>
    </div>

    <!-- Bottom Navigation -->
<nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-10">
  <div class="max-w-4xl mx-auto">
    <div class="grid grid-cols-5 text-gray-600 text-xs">
      <a href="/home" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0H5m4 0h10m-4-6v6m0 0h4" />
        </svg>
        <span>Home</span>
      </a>
      
      <a href="/search" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <span>Search</span>
      </a>
      
      <a href="/chats" class="flex flex-col items-center py-3 text-green-600 relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="font-medium">Chats</span>
        <div class="absolute top-1 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-green-600 rounded-full"></div>
      </a>
      
      <a href="/post" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Post</span>
      </a>
      
      <a href="/profile" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 active:bg-gray-50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A7 7 0 0112 15a7 7 0 016.879 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>Profile</span>
      </a>
    </div>
  </div>
</nav>
  </body>
</html>
