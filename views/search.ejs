<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Search - InnoHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      function switchView(type) {
        document.getElementById('searchType').value = type;

        const ideasTab = document.getElementById('ideas-tab');
        const problemsTab = document.getElementById('problems-tab');

        if (type === 'idea') {
          ideasTab.classList.add('bg-gradient-to-r', 'from-green-600', 'to-green-700', 'text-white', 'shadow-lg');
          ideasTab.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');

          problemsTab.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'text-white', 'shadow-lg');
          problemsTab.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
        } else {
          problemsTab.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'text-white', 'shadow-lg');
          problemsTab.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');

          ideasTab.classList.remove('bg-gradient-to-r', 'from-green-600', 'to-green-700', 'text-white', 'shadow-lg');
          ideasTab.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
        }
      }

      // Auto-select tab based on server value
      window.onload = function () {
        switchView("<%= type || 'idea' %>");
      };
    </script>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">

    <!-- Modern Header -->
    <header class="bg-white/80 backdrop-blur-lg border-b border-gray-200/50 shadow-lg sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
              <div class="w-16 h-16 rounded-2xl overflow-hidden shadow-lg">
    <img src="/images/logo.png" alt="InnoHub Logo" class="w-full h-full object-cover" />
  </div>
  
            <div>
              <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-green-600 bg-clip-text text-transparent">
                Search & Discover
              </h1>
              <p class="text-sm text-gray-600">Find the perfect <%= type === 'problem' ? 'problems' : 'ideas' %> for you</p>
            </div>
          </div>
          
          <a href="/home" class="flex items-center space-x-2 text-gray-600 hover:text-blue-600 transition-colors duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span class="font-medium">Back to Home</span>
          </a>
        </div>
      </div>
    </header>

    <div class="max-w-6xl mx-auto px-6 py-8 pb-24">
      
      <!-- Search Header -->
      <div class="text-center mb-8">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Discover Amazing <%= type === 'problem' ? 'Problems' : 'Ideas' %>
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Use our powerful search tools to find exactly what you're looking for in our innovation ecosystem.
        </p>
      </div>

      <!-- View Switch Tabs -->
      <div class="flex justify-center mb-8">
        <div class="bg-white/80 backdrop-blur-sm p-2 rounded-2xl shadow-lg border border-gray-200">
          <button 
            id="ideas-tab" 
            onclick="switchView('idea')" 
            type="button" 
            class="px-6 py-3 rounded-2xl font-semibold transition-all duration-300 mr-2"
          >
            üí° Ideas
          </button>
          <button 
            id="problems-tab" 
            onclick="switchView('problem')" 
            type="button" 
            class="px-6 py-3 rounded-2xl font-semibold transition-all duration-300"
          >
            üéØ Problems
          </button>
        </div>
      </div>

      <!-- Search Filters -->
      <form action="/search" method="GET" class="mb-8">
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-6 shadow-lg border border-gray-200">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            
            <!-- Sector Filter -->
            <div>
              <label class="block mb-2 font-semibold text-gray-700">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Sector
              </label>
              <select name="sector" class="w-full p-3 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white/50 backdrop-blur-sm transition-all duration-300">
                <option value="">All Sectors</option>
                <option value="Technology">üñ•Ô∏è Technology</option>
                <option value="Healthcare">üè• Healthcare</option>
                <option value="Education">üìö Education</option>
                <option value="Finance">üí∞ Finance</option>
                <option value="Environment">üå± Environment</option>
                <option value="Entertainment">üé¨ Entertainment</option>
              </select>
            </div>

            <!-- Keyword Filter -->
            <div>
              <label class="block mb-2 font-semibold text-gray-700">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Keywords
              </label>
              <input
                type="text"
                name="keyword"
                placeholder="Search for specific terms..."
                class="w-full p-3 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white/50 backdrop-blur-sm transition-all duration-300"
              />
            </div>

            <!-- Hidden type input -->
            <input type="hidden" name="type" id="searchType" value="<%= type || 'idea' %>" />

            <!-- Date Filter -->
            <div>
              <label class="block mb-2 font-semibold text-gray-700">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Date Range
              </label>
              <select name="dateRange" class="w-full p-3 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white/50 backdrop-blur-sm transition-all duration-300">
                <option value="">All Time</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
              </select>
            </div>

            <!-- Search Button -->
            <div class="flex items-end">
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-green-600 text-white px-6 py-3 rounded-2xl font-semibold hover:from-blue-700 hover:to-green-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
              >
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Search
              </button>
            </div>
          </div>
        </div>
      </form>
      
      <!-- Search Results -->
      <div id="search-results">
        <% if (results && results.length > 0) { %>
          <div class="mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">Search Results</h3>
            <p class="text-gray-600">Found <%= results.length %> <%= type === 'problem' ? 'problems' : 'ideas' %> matching your criteria</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% results.forEach((item, index) => { %>
              <div class="group bg-white/80 backdrop-blur-sm rounded-3xl p-6 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-blue-200 hover:scale-105">
                
                <!-- Header -->
                <div class="flex items-center justify-between mb-4">
                  <div class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold bg-gradient-to-r from-blue-100 to-green-100 text-blue-800 border border-blue-200">
                    <div class="w-2 h-2 bg-blue-500 rounded-full mr-2 animate-pulse"></div>
                    <%= item.sector %>
                  </div>
                  <div class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                    <%= item.datePosted.toLocaleDateString('en-US', { 
                      month: 'short', 
                      day: 'numeric' 
                    }) %>
                  </div>
                </div>

                <!-- Content -->
                <div class="mb-4">
                  <h3 class="text-lg font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-blue-700 transition-colors duration-300">
                    <%= item.title || item.problem || 'Innovation Project' %>
                  </h3>
                  <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
                    <%= item.description %>
                  </p>
                </div>

                <!-- Footer -->
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-green-500 rounded-full flex items-center justify-center">
                      <span class="text-white text-xs font-bold">
                        <%= item.sector ? item.sector.charAt(0).toUpperCase() : '?' %>
                      </span>
                    </div>
                    <div class="text-xs text-gray-500">
                      <div class="font-medium"><%= type === 'problem' ? 'Problem' : 'Idea' %></div>
                      <div>Community</div>
                    </div>
                  </div>

                  <button class="group/btn relative inline-flex items-center justify-center p-2.5 bg-gradient-to-r from-blue-500 to-green-600 text-white rounded-2xl hover:from-blue-600 hover:to-green-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-110">
                    <svg class="w-5 h-5 transition-transform duration-300 group-hover/btn:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  </button>
                </div>

                <!-- Decorative Background Element -->
                <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-blue-200 to-green-200 rounded-full opacity-20 group-hover:opacity-30 transition-opacity duration-500"></div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <!-- Empty State -->
          <div class="text-center py-16">
            <div class="w-32 h-32 bg-gradient-to-br from-blue-100 to-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">No Results Found</h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto">
              No <%= type === 'problem' ? 'problems' : 'ideas' %> found matching your search criteria. Try adjusting your filters or search terms.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/post" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-2xl hover:from-green-700 hover:to-green-800 transition-all duration-300 shadow-lg hover:shadow-xl">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Post <%= type === 'problem' ? 'Problem' : 'Idea' %>
              </a>
              
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Modern Bottom Navigation -->
    <nav class="fixed bottom-0 left-0 right-0 bg-white/90 backdrop-blur-lg border-t border-gray-200/50 shadow-2xl z-50">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-5 text-gray-600 text-xs">
          <a href="/home" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 group">
            <div class="p-2 rounded-2xl group-hover:bg-green-100 transition-colors duration-200">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0H5m4 0h10m-4-6v6m0 0h4"></path>
              </svg>
            </div>
            <span class="group-hover:font-medium">Home</span>
          </a>
          
          <a href="/search" class="flex flex-col items-center py-3 text-green-600 relative group">
        <div class="p-2 rounded-2xl bg-green-100 mb-1 group-hover:bg-green-200 transition-colors duration-200">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <span class="font-semibold text-green-600">Search</span>
        <div class="absolute top-1 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-green-600 rounded-full"></div>
          </a>
          
          <a href="/chats" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 group">
            <div class="p-2 rounded-2xl group-hover:bg-green-100 transition-colors duration-200">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <span class="group-hover:font-medium">Chats</span>
          </a>
          
          <a href="/post" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 group">
            <div class="p-2 rounded-2xl group-hover:bg-green-100 transition-colors duration-200">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <span class="group-hover:font-medium">Post</span>
          </a>
          
          <a href="/profile" class="flex flex-col items-center py-3 hover:text-green-600 transition-colors duration-200 group">
            <div class="p-2 rounded-2xl group-hover:bg-green-100 transition-colors duration-200">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <span class="group-hover:font-medium">Profile</span>
          </a>
        </div>
      </div>
    </nav>
  </body>
</html>