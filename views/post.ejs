<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Post Idea - InnoHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    function toggleForm(type) {
      const ideaForm = document.getElementById('idea-form');
      const problemSection = document.getElementById('problem-section');
      const ideaBtn = document.getElementById('idea-btn');
      const problemBtn = document.getElementById('problem-btn');
      
      if (type === 'idea') {
        ideaForm.classList.remove('hidden');
        problemSection.classList.add('hidden');
        ideaBtn.classList.add('bg-green-600', 'text-white');
        ideaBtn.classList.remove('bg-gray-200', 'text-gray-700');
        problemBtn.classList.remove('bg-red-600', 'text-white');
        problemBtn.classList.add('bg-gray-200', 'text-gray-700');
      } else if (type === 'problem') {
        problemSection.classList.remove('hidden');
        ideaForm.classList.add('hidden');
        problemBtn.classList.add('bg-red-600', 'text-white');
        problemBtn.classList.remove('bg-gray-200', 'text-gray-700');
        ideaBtn.classList.remove('bg-green-600', 'text-white');
        ideaBtn.classList.add('bg-gray-200', 'text-gray-700');
      }
    }
  </script>
